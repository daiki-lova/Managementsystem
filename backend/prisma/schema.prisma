generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model analytics_data {
  id               String   @id
  articleId        String
  date             DateTime @db.Date
  pageViews        Int      @default(0)
  organicViews     Int      @default(0)
  conversionClicks Int      @default(0)
  bounceRate       Int      @default(0)
  avgTimeOnPage    Float    @default(0)
  keywords         Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  articles         articles @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([articleId, date])
  @@index([articleId])
  @@index([date])
}

model article_conversions {
  id           String      @id
  articleId    String
  conversionId String
  position     Int         @default(0)
  clickCount   Int         @default(0)
  createdAt    DateTime    @default(now())
  articles     articles    @relation(fields: [articleId], references: [id], onDelete: Cascade)
  conversions  conversions @relation(fields: [conversionId], references: [id], onDelete: Cascade)

  @@index([articleId])
  @@index([conversionId])
}

model article_images {
  id           String           @id
  articleId    String
  mediaAssetId String
  type         ArticleImageType
  position     Int              @default(0)
  createdAt    DateTime         @default(now())
  articles     articles         @relation(fields: [articleId], references: [id], onDelete: Cascade)
  media_assets media_assets     @relation(fields: [mediaAssetId], references: [id])

  @@index([articleId])
  @@index([mediaAssetId])
}

model article_knowledge_items {
  articleId       String
  knowledgeItemId String
  createdAt       DateTime        @default(now())
  articles        articles        @relation(fields: [articleId], references: [id], onDelete: Cascade)
  knowledge_items knowledge_items @relation(fields: [knowledgeItemId], references: [id], onDelete: Cascade)

  @@id([articleId, knowledgeItemId])
  @@index([articleId])
  @@index([knowledgeItemId])
}

model article_tags {
  articleId String
  tagId     String
  createdAt DateTime @default(now())
  articles  articles @relation(fields: [articleId], references: [id], onDelete: Cascade)
  tags      tags     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([articleId, tagId])
  @@index([articleId])
  @@index([tagId])
}

model articles {
  id                      String                    @id
  title                   String
  blocks                  Json
  slug                    String                    @unique
  status                  ArticleStatus             @default(DRAFT)
  publishedAt             DateTime?
  deletedAt               DateTime?
  version                 Int                       @default(1)
  metaTitle               String?
  metaDescription         String?
  ogpImageUrl             String?
  previousSlug            String?
  categoryId              String
  authorId                String
  thumbnailId             String?
  generationJobId         String?
  createdById             String
  brandId                 String
  // LLMO (LLM Optimization) fields
  llmoShortSummary        String?                   @db.Text
  llmoKeyTakeaways        Json?
  schemaJsonLd            Json?
  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  analytics_data          analytics_data[]
  article_conversions     article_conversions[]
  article_images          article_images[]
  article_knowledge_items article_knowledge_items[]
  article_tags            article_tags[]
  authors                 authors                   @relation(fields: [authorId], references: [id])
  brands                  brands                    @relation(fields: [brandId], references: [id])
  categories              categories                @relation(fields: [categoryId], references: [id])
  users                   users                     @relation(fields: [createdById], references: [id])
  generation_jobs         generation_jobs?          @relation(fields: [generationJobId], references: [id])
  media_assets            media_assets?             @relation(fields: [thumbnailId], references: [id])
  slug_history            slug_history[]

  @@index([authorId])
  @@index([brandId])
  @@index([categoryId])
  @@index([createdById])
  @@index([generationJobId])
  @@index([previousSlug])
  @@index([publishedAt])
  @@index([slug])
  @@index([status])
}

model audit_logs {
  id           String   @id
  action       String
  userId       String?
  userEmail    String?
  resourceType String?
  resourceId   String?
  details      Json?
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())

  @@index([action])
  @@index([createdAt])
  @@index([resourceType, resourceId])
  @@index([userId])
}

model authors {
  id              String            @id
  name            String
  slug            String            @unique
  role            String
  qualifications  Json
  bio             String
  imageUrl        String?
  socialLinks     Json?
  categories      Json?  // Array of strings: Author's specialized categories
  tags            Json?  // Array of strings: Author's specialized tags

  // === キャリアデータ（数値）===
  careerStartYear     Int?      // ヨガ・フィットネス開始年（例: 2005）
  teachingStartYear   Int?      // 指導開始年（例: 2010）
  totalStudentsTaught Int?      // これまでの指導人数（累計）
  graduatesCount      Int?      // インストラクター養成講座卒業生数
  weeklyLessons       Int?      // 現在の週あたりレッスン本数

  // === 資格情報 ===
  // JSON配列: [{name: string, year: number?, location: string?}]
  // 例: [{name: "全米ヨガアライアンスRYT200", year: 2010, location: "インド・リシケシュ"}]
  certifications      Json?

  // === エピソード・経験 ===
  // JSON配列: [{type: string, title: string, content: string}]
  // type: "transformation"(自身の変化), "student"(生徒の変化), "teaching"(指導での気づき)
  // 例: [{type: "transformation", title: "ヨガとの出会い", content: "30代で体調を崩し..."}]
  episodes            Json?

  // === よく使うフレーズ・口癖 ===
  // JSON配列: string[]
  // 例: ["呼吸を大切に", "自分のペースで"]
  signaturePhrases    Json?

  // === 専門・得意分野 ===
  // JSON配列: string[]
  // 例: ["マタニティヨガ", "シニアヨガ", "リストラティブヨガ"]
  specialties         Json?

  // === 執筆スタイル・パーソナリティ ===
  // 文体の好み: "formal"(丁寧), "casual"(親しみやすい), "professional"(専門的)
  writingStyle        String?

  // 指導理念・信念（なぜヨガを教えるのか、大切にしていること）
  philosophy          String?   @db.Text

  // 使わない言葉・表現（AIっぽい表現を避けるため）
  // JSON配列: string[]
  avoidWords          Json?

  // 主な指導対象（例: "20〜40代の働く女性", "シニア層", "初心者"）
  targetAudience      String?

  // 指導スタイル・アプローチ（例: "寄り添い型", "厳しめ", "理論重視"）
  teachingApproach    String?

  // 師事した先生・影響を受けた流派
  // JSON配列: string[]
  influences          Json?

  // 活動拠点（地域色を出すため）
  locationContext     String?

  createdAt       DateTime          @default(now())
  updatedAt       DateTime @updatedAt
  articles        articles[]
  generation_jobs generation_jobs[]
  knowledge_items knowledge_items[]
}

model brands {
  id              String            @id
  name            String
  slug            String            @unique
  description     String?
  tone            String?
  logoUrl         String?
  isDefault       Boolean           @default(false)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime @updatedAt
  articles        articles[]
  generation_jobs generation_jobs[]
  knowledge_items knowledge_items[]

  @@index([slug])
}

model categories {
  id              String            @id
  name            String
  slug            String            @unique
  description     String?
  color           String?
  articlesCount   Int               @default(0)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime @updatedAt
  articles        articles[]
  generation_jobs generation_jobs[]

  @@index([slug])
}

model conversions {
  id                         String                       @id
  name                       String
  type                       ConversionType
  status                     ConversionStatus             @default(ACTIVE)
  url                        String
  thumbnailUrl               String?
  context                    String
  periodStart                DateTime?
  periodEnd                  DateTime?
  createdAt                  DateTime                     @default(now())
  updatedAt                  DateTime @updatedAt
  article_conversions        article_conversions[]
  generation_job_conversions generation_job_conversions[]

  @@index([status])
}

model generation_job_conversions {
  generationJobId String
  conversionId    String
  createdAt       DateTime        @default(now())
  conversions     conversions     @relation(fields: [conversionId], references: [id], onDelete: Cascade)
  generation_jobs generation_jobs @relation(fields: [generationJobId], references: [id], onDelete: Cascade)

  @@id([generationJobId, conversionId])
  @@index([conversionId])
  @@index([generationJobId])
}

model generation_job_knowledge_items {
  generationJobId String
  knowledgeItemId String
  createdAt       DateTime        @default(now())
  generation_jobs generation_jobs @relation(fields: [generationJobId], references: [id], onDelete: Cascade)
  knowledge_items knowledge_items @relation(fields: [knowledgeItemId], references: [id], onDelete: Cascade)

  @@id([generationJobId, knowledgeItemId])
  @@index([generationJobId])
  @@index([knowledgeItemId])
}

model generation_jobs {
  id                             String                           @id
  keyword                        String
  searchVolume                   Int?
  status                         GenerationJobStatus              @default(PENDING)
  progress                       Int                              @default(0)
  currentStage                   Int                              @default(0)
  stageOutputs                   Json?
  statusMessage                  String?
  tokensUsed                     Int?
  errorMessage                   String?
  categoryId                     String
  authorId                       String
  brandId                        String?
  publishStrategy                PublishStrategy                  @default(DRAFT)
  imageStyle                     ImageStyle                       @default(WATERCOLOR)
  scheduledAt                    DateTime?
  totalArticles                  Int                              @default(1)
  userId                         String
  createdAt                      DateTime                         @default(now())
  updatedAt                      DateTime @updatedAt
  completedAt                    DateTime?
  articles                       articles[]
  generation_job_conversions     generation_job_conversions[]
  generation_job_knowledge_items generation_job_knowledge_items[]
  generation_stages              generation_stages[]
  authors                        authors                          @relation(fields: [authorId], references: [id])
  brands                         brands?                          @relation(fields: [brandId], references: [id])
  categories                     categories                       @relation(fields: [categoryId], references: [id])
  users                          users                            @relation(fields: [userId], references: [id])

  @@index([authorId])
  @@index([brandId])
  @@index([categoryId])
  @@index([createdAt])
  @@index([status])
  @@index([userId])
}

model generation_stages {
  id           String      @id @default(uuid())
  jobId        String
  stage        Int
  stageName    String
  status       StageStatus @default(PENDING)
  input        Json?
  output       Json?
  promptUsed   String?     @db.Text
  tokensUsed   Int?
  errorMessage String?
  startedAt    DateTime?
  completedAt  DateTime?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  job          generation_jobs @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([stage])
}

model knowledge_items {
  id                             String                           @id
  title                          String
  type                           String
  brandId                        String?
  course                         String?
  authorId                       String?
  content                        String
  sourceUrl                      String?
  sourceScrapedAt                DateTime?
  usageCount                     Int                              @default(0)
  createdAt                      DateTime                         @default(now())
  updatedAt                      DateTime @updatedAt
  article_knowledge_items        article_knowledge_items[]
  generation_job_knowledge_items generation_job_knowledge_items[]
  authors                        authors?                         @relation(fields: [authorId], references: [id])
  brands                         brands?                          @relation(fields: [brandId], references: [id])

  @@index([authorId])
  @@index([brandId])
  @@index([course])
  @@index([type])
}

model media_asset_tags {
  mediaAssetId String
  tagId        String
  createdAt    DateTime     @default(now())
  media_assets media_assets @relation(fields: [mediaAssetId], references: [id], onDelete: Cascade)
  tags         tags         @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([mediaAssetId, tagId])
  @@index([mediaAssetId])
  @@index([tagId])
}

model media_assets {
  id               String             @id
  url              String
  fileName         String
  altText          String?
  source           MediaSource        @default(UPLOAD)
  showInLibrary    Boolean            @default(true)
  isDeleted        Boolean            @default(false)
  width            Int?
  height           Int?
  fileSize         Int?
  createdAt        DateTime           @default(now())
  updatedAt        DateTime @updatedAt
  article_images   article_images[]
  articles         articles[]
  media_asset_tags media_asset_tags[]

  @@index([showInLibrary, isDeleted])
  @@index([source])
}

model notifications {
  id        String           @id
  userId    String
  type      NotificationType
  title     String
  message   String
  read      Boolean          @default(false)
  metadata  Json?
  createdAt DateTime         @default(now())

  @@index([createdAt])
  @@index([userId, read])
}

model slug_history {
  id        String   @id
  articleId String
  oldSlug   String   @unique
  newSlug   String
  createdAt DateTime @default(now())
  articles  articles @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([articleId])
}

model system_settings {
  id                   String   @id @default("default")
  gaApiKey             String?
  gaPropertyId         String?
  searchConsoleApiKey  String?
  searchConsoleSiteUrl String?
  searchVolumeApiKey   String?
  dataforSeoApiKey     String?
  openRouterApiKey     String?
  openaiApiKey         String?
  geminiApiKey         String?  // Google AI Studio API Key (Nano Banana画像生成用)
  aiModel              String?  @default("openai/gpt-4-turbo")
  imageModel           String?  @default("pro")
  articleModel         String?  @default("pro")
  analysisModel        String?  @default("banana")
  titlePrompt          String?  @db.Text  // タイトル生成プロンプト
  keywordPrompt        String?  @db.Text  // キーワード分析プロンプト（未使用）
  keywordSuggestPrompt String?  @db.Text  // キーワード提案プロンプト
  imagePrompt          String?  @db.Text  // 画像生成プロンプト
  systemPrompt         String?  @db.Text  // 記事生成プロンプト
  // V4パイプライン専用プロンプト
  whiteDataPrompt      String?  @db.Text  // ホワイトデータ検索プロンプト
  llmoPrompt           String?  @db.Text  // LLMo最適化プロンプト
  minSearchVolume      Int      @default(300)
  maxSearchVolume      Int      @default(2000)
  volumeZones          Json?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model tags {
  id               String             @id
  name             String
  slug             String             @unique
  articlesCount    Int                @default(0)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime @updatedAt
  article_tags     article_tags[]
  media_asset_tags media_asset_tags[]

  @@index([slug])
}

model users {
  id              String            @id
  email           String            @unique
  password        String
  role            UserRole          @default(WRITER)
  name            String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime @updatedAt
  articles        articles[]
  generation_jobs generation_jobs[]

  @@index([email])
}

enum ArticleImageType {
  INSERTED_1
  INSERTED_2
}

enum ArticleStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  DELETED
}

enum ConversionStatus {
  ACTIVE
  INACTIVE
}

enum ConversionType {
  BANNER
  TEXT
  INLINE
}

enum GenerationJobStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

enum StageStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  SKIPPED
}

enum MediaSource {
  UPLOAD
  AI_GENERATED
}

enum NotificationType {
  GENERATION_COMPLETE
  GENERATION_FAILED
  ARTICLE_SCHEDULED
  ARTICLE_PUBLISHED
  SYSTEM
}

enum PublishStrategy {
  DRAFT
  PUBLISH_NOW
  SCHEDULED
}

enum ImageStyle {
  WATERCOLOR  // 手書き風水彩画
  REALISTIC   // リアルな写真風
}

enum UserRole {
  OWNER
  WRITER
}
